    "npm-run-all": "^4.1.5",
    "openapi-response-validator": "^9.1.0",
    "openapi-typescript": "^4.0.1",
    "parse-strings-in-object": "^2.0.0",
    "path": "^0.12.7",
    "promise-timeout": "^1.3.0",
    "rc": "^1.2.8",
    "redis": "^3.1.2",
    "sqlite3": "^5.0.2",
